{% extends "layout.html.twig" %}

{% block stylesheet %}
    <style>
        body{
            flex-flow: wrap;
        }

        .bien{
            width: 100%;
            text-align: center;
        }
        .input-group{
            flex-direction: row-reverse;
        }
    </style>
{% endblock %}
{% block title %}
    Je recherche un bien
{% endblock %}

{% block header %}

{% endblock %}

{% block content %}
{#    {% include '_nav_retour.html' %}#}
    <div class="bien">
        <h1>Un bien</h1>
    </div>
    <div class="container">
        <form method="GET" action="">
    {#    <input type="text" placeholder="ex: Une poussette, du bois de construction, ...">#}
            <div class="container-fluid">
                <div class="input-group input-group-lg">
                    <div class="input-group-prepend">
                        <button type="submit" class="input-group-text" id="inputGroup-sizing-lg">Recherche </button>
                    </div>
                    <input type="text" name="search" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg">
                </div>
            </div>
        </form>

        <div class="form-group">
            <label for="sel1">Catégories</label>
            <select class="form-control" id="sel1" name="category">
                <option value="">selectionner une catégorie</option>
                {% for categorie in category %}
                    <option value="{{ categorie.id }}"> {{ categorie.name }} </option>
                {% endfor %}
            </select>
        </div>
    </div>
    <section id="suggestions">
        <h3>Ce qu'il pourrait vous intéressez</h3>
        <div>Carousel</div>
    </section>

{% endblock %}



